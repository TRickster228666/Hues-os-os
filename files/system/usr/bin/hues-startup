#!/bin/bash
sleep 2 # –ñ–¥–µ–º –ø—Ä–æ–≥—Ä—É–∑–∫—É –≥—Ä–∞—Ñ–∏–∫–∏
clear
fastfetch --logo none --structure Title:Separator:OS:Host:Uptime:Memory

echo ""
gum style --foreground 212 "‚ö° HUES-OS SYSTEM CHECK"

# –ü—Ä–æ–≤–µ—Ä–∫–∏
pgrep -x "ollama" >/dev/null && S_AI="ONLINE" || S_AI="OFFLINE"
ping -c 1 8.8.8.8 >/dev/null && S_NET="ONLINE" || S_NET="OFFLINE"

echo "AI Core: $S_AI | Network: $S_NET"
echo ""

ACTION=$(gum choose --timeout=5s --header "–î–µ–π—Å—Ç–≤–∏–µ (5—Å –∞–≤—Ç–æ-–≤—ã—Ö–æ–¥):" "ü§ñ –°–ø—Ä–æ—Å–∏—Ç—å –ò–ò" "üöÄ –û–±–Ω–æ–≤–∏—Ç—å –≤—Å–µ" "üíª –†–∞–±–æ—á–∏–π —Å—Ç–æ–ª")

case $ACTION in
    "ü§ñ –°–ø—Ä–æ—Å–∏—Ç—å –ò–ò") hues-ai ;;
    "üöÄ –û–±–Ω–æ–≤–∏—Ç—å –≤—Å–µ") gum spin --title "–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ..." -- topgrade ;;
esac
